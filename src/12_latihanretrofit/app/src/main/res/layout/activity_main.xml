<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="repo"
            type="org.aplas.latihanretrofit.models.Repo" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/idLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/idLabel"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="ID : " />
            <TextView
                android:id="@+id/idValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@{String.valueOf(repo.id)}"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/urlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/idLayout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/urlLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="URL: "/>
            <TextView
                android:id="@+id/urlValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@{String.valueOf(repo.htmlUrl)}"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/descLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/urlLayout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/descLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Description: "/>
            <TextView
                android:id="@+id/descValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@{String.valueOf(repo.description)}"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descLayout"
            android:orientation="vertical">
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:hint="Username"
        android:id="@+id/userEdit"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/deskripsiText" android:layout_marginTop="32dp"/>
        <Button
            android:text="Cari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cariBtn"
            android:onClick="cariUser"
            app:layout_constraintTop_toBottomOf="@+id/userEdit"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="@+id/userEdit"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="230dp"/>
    </RelativeLayout>
</layout>